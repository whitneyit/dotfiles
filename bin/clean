#!/usr/bin/env bash

# The array of files to delete
declare -a to_delete=(
    .DS_Store
    .DS_Store?
    .localized
    desktop.ini
    ehthumbs.db
    Thumbs.db
)

# Recursively delete files that match a certain pattern
for dirt in "${to_delete[@]}"
do
    find . -type f -name "$dirt" -ls -delete
done

# vim: set syn=sh :
