#!/usr/bin/env bash

# Define a fallback `OS`
LOCAL_OS="other"

# Mac
if [ "$(uname -s | grep -c Darwin)" -gt 0 ]; then
    LOCAL_OS="darwin"

# Linux
elif [ "$(uname -s | grep -c Linux)" -gt 0 ]; then
    LOCAL_OS="linux"

# Windows
elif [ "$(uname -s | grep -c MINGW32_NT)" -gt 0 ]; then
    LOCAL_OS="win"

# Cygwin
elif [ "$(uname -s | grep -c Cygwin)" -gt 0 ]; then
    LOCAL_OS="win"

# Cygwin via Babun
elif [ "$(uname -s | grep -c CYGWIN)" -gt 0 ]; then
    LOCAL_OS="win"

fi

# Output the result
echo "$LOCAL_OS"

# vim: set syn=sh :
