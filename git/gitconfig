[user]
    name = James Whitney
    email = james@whitney.io
    # signingkey = `git config --global user.signingkey 1234ABCD`

# [commit]
#     gpgsign = true

[init]
    defaultBranch = master
    templatedir = ~/.git_templates

[core]
    autocrlf = false
    editor = vim
    eol = lf
    excludesfile = ~/.gitignore_global
    filemode = true
    quotepath = false
    longpaths = true
    # pager = diff-highlight | less

[credential]
    helper = store

# [gc]
#    pruneExpire = never
#    reflogExpire = never
#    reflogExpireUnreachable = never

[url "https://"]
    insteadOf = git://

[alias]
    ctags        = !.git/hooks/ctags
    panic        = !git log --graph --oneline --decorate $( git fsck --no-reflog | awk '/dangling commit/ {print $3}' )
    pr           = "!fn() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; fn"
    pr-clean     = "!fn() { git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done; }; fn"
    start        = "!fn() { local email=${1:-james@whitney.io}; git init; git config user.email ${email}; git commit --allow-empty --no-gpg --message='chore: initial commit' --message='This commit was created with:\n\n```sh\ngit config user.email \"'${email}'\";\ngit commit --allow-empty --no-gpg --message=\"chore: initial commit\";\n```'; }; fn"
    unchangeable = !git ls-files -v | grep ^[a-z]
    untracked    = !git ls-files --others --exclude-standard

[branch]
    autosetupmerge = true
[diff]
    compactionHeuristic = true
    colorMoved = zebra
    tool = vimdiff
[difftool]
    prompt = false
[help]
    autocorrect = 1
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[pull]
    default = current
[push]
    default = current

[color]
    ui = true
[color "branch"]
    current = green
    remote = blue
    plain = normal
    local = yellow
    upstream = white
[color "diff"]
    commit = normal
    frag = blue reverse
    meta = yellow dim
    new = green
    old = red
    plain = normal
    whitespace = yellow reverse
[color "grep"]
    context = normal
    filename = normal
    function = normal
    linenumber = normal
    match = normal
    selected = normal
    separator = normal
[color "status"]
    header = normal
    added = yellow
    branch = white
    changed = yellow
    nobranch = normal
    updated = green
    untracked = red

