#!/usr/bin/env bash

fnd() {
    find * \
        -not -path ".chrome/**" \
        -not -path ".git/**" \
        -not -path ".hg/**" \
        -not -path ".karma/**" \
        -not -path ".protractor/**" \
        -not -path ".sass-cache/**" \
        -not -path ".svn/**" \
        -not -path "backups/**" \
        -not -path "bower_components/**" \
        -not -path "bundle/**" \
        -not -path "completions/**" \
        -not -path "coverage/**" \
        -not -path "dist/**" \
        -not -path "docs/**" \
        -not -path "jspm_packages/**" \
        -not -path "node_modules/**" \
        -not -path "plugins/**" \
        -not -path "reports/**" \
        -not -path "typings/**" \
        -not -path "undo/**" \
        -not -path "vendor/**" \
        "$@"
}

fndd() {
    find * \
        -not -path ".chrome/**" \
        -not -path ".git/**" \
        -not -path ".hg/**" \
        -not -path ".karma/**" \
        -not -path ".protractor/**" \
        -not -path ".sass-cache/**" \
        -not -path ".svn/**" \
        -not -path "backups/**" \
        -not -path "bower_components/**" \
        -not -path "bundle/**" \
        -not -path "completions/**" \
        -not -path "coverage/**" \
        -not -path "dist/**" \
        -not -path "docs/**" \
        -not -path "jspm_packages/**" \
        -not -path "node_modules/**" \
        -not -path "plugins/**" \
        -not -path "reports/**" \
        -not -path "typings/**" \
        -not -path "undo/**" \
        -not -path "vendor/**" \
        -type d -name "$1"
}

fndf() {
    find * \
        -not -path ".chrome/**" \
        -not -path ".git/**" \
        -not -path ".hg/**" \
        -not -path ".karma/**" \
        -not -path ".protractor/**" \
        -not -path ".sass-cache/**" \
        -not -path ".svn/**" \
        -not -path "backups/**" \
        -not -path "bower_components/**" \
        -not -path "bundle/**" \
        -not -path "completions/**" \
        -not -path "coverage/**" \
        -not -path "dist/**" \
        -not -path "docs/**" \
        -not -path "jspm_packages/**" \
        -not -path "node_modules/**" \
        -not -path "plugins/**" \
        -not -path "reports/**" \
        -not -path "typings/**" \
        -not -path "undo/**" \
        -not -path "vendor/**" \
        -type f -name "$1"
}

# vim: set syn=sh :
