#!/usr/bin/env bash

ARGS="\
    --color \
    --exclude *.map \
    --exclude npm-debug.log \
    --exclude-dir .git \
    --exclude-dir .karma \
    --exclude-dir .protractor \
    --exclude-dir .sass-cache \
    --exclude-dir backups \
    --exclude-dir bower_components \
    --exclude-dir bundle \
    --exclude-dir completions \
    --exclude-dir coverage \
    --exclude-dir dist \
    --exclude-dir docs \
    --exclude-dir jspm_packages \
    --exclude-dir node_modules \
    --exclude-dir plugins \
    --exclude-dir reports \
    --exclude-dir typings \
    --exclude-dir undo \
    --exclude-dir vendor \
    "

# I: ignore binary files
# i: case insensitive
# l: list of filenames instead of contexts
# n: line number
# r: recursive

alias    grp="grep -I -i    -n    $ARGS"
alias   grpl="grep -I -i -l       $ARGS"
alias   grps="grep -I       -n    $ARGS"
alias  grpls="grep -I    -l       $ARGS"
alias   grpr="grep -I -i    -n -r $ARGS"
alias  grprl="grep -I -i -l    -r $ARGS"
alias  grprs="grep -I       -n -r $ARGS"
alias grprls="grep -I    -l    -r $ARGS"

# vim: set syn=sh :
