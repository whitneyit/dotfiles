#!/usr/bin/env bash

if [ "$(type -P ggrep)" ]; then
    alias grep="ggrep"
fi

alias _grep="grep \
    --color='always' \
    --exclude *.lock \
    --exclude *.map \
    --exclude *.min.css \
    --exclude *.min.js \
    --exclude *.svg \
    --exclude *lock.json \
    --exclude npm-debug.log \
    --exclude-dir .cache \
    --exclude-dir .chrome \
    --exclude-dir .git \
    --exclude-dir .hg \
    --exclude-dir .karma \
    --exclude-dir .next \
    --exclude-dir .protractor \
    --exclude-dir .sass-cache \
    --exclude-dir .svn \
    --exclude-dir backups \
    --exclude-dir bower_components \
    --exclude-dir build \
    --exclude-dir bundle \
    --exclude-dir completions \
    --exclude-dir coverage \
    --exclude-dir dist \
    --exclude-dir docs \
    --exclude-dir graph \
    --exclude-dir jspm_packages \
    --exclude-dir node_modules \
    --exclude-dir out-tsc \
    --exclude-dir plugins \
    --exclude-dir reports \
    --exclude-dir tmp \
    --exclude-dir typings \
    --exclude-dir undo \
    --exclude-dir vendor \
    "

# I: ignore binary files
# i: case insensitive
# l: list of filenames instead of contexts
# n: line number
# P: Perl-compatible regular expression
# R: recursive
# z: Treat the input as a set of lines

function grp() {
    _grep -I       -i    -n    $@ | sed 's/:/ /'
}
function grpl() {
    _grep -I       -i -l       $@
}
function grpm() {
    _grep -I -P -z -i    -n    $@ | sed 's/:/ /'
}
function grps() {
    _grep -I             -n    $@ | sed 's/:/ /'
}
function grpls() {
    _grep -I          -l       $@
}
function grpms() {
    _grep -I -P -z       -n    $@ | sed 's/:/ /'
}
function grpr() {
    _grep -I       -i    -n -R $@
}
function grprl() {
    _grep -I       -i -l    -R $@ | sed 's/:/ /'
}
function grprm() {
    _grep -I -P -z -i    -n -R $@ | sed 's/:/ /'
}
function grprs() {
    _grep -I             -n -R $@ | sed 's/:/ /'
}
function grprls() {
    _grep -I          -l    -R $@
}
function grprms() {
    _grep -I -P -z       -n -R $@ | sed 's/:/ /'
}
# vim: set syn=sh :
