# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
indent_style = space
max_line_length = 0
trim_trailing_whitespace = true

[*.md]
max_line_length = 80

[*.yml]
indent_size = 2

[{COMMIT_EDITMSG,*.diff,*.md,*.patch}]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 72

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[package.json]
indent_size = 2
indent_style = space

# Auto generated files
[{jspm.config.js,jspm.browser.js}]
indent_size = 2
indent_style = space

